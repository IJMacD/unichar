.container {
  margin: 20px auto 0;
  width: 70%;
}
.input {
  font-size: 3em;
  display: block;
  border: 1px solid #CCC;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  text-align: center;
  width: 100%;
}
.output {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
}
.output li {
  font-size: 3em;
  border: 1px solid #CCC;
  text-align: center;
}
.label {
  font-size: 16px;
  color: #666;
}
.char {
  display: inline-block;
  border: 1px solid #ECECEC;
}
